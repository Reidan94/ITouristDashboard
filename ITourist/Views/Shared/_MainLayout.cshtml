@using ITourist.Controllers
@{
    var user = new HomeController().DefineUser(Context);
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    @Styles.Render("~/bundles/Main/SharedStyles")
    <link rel="stylesheet" href="~/Content/Main/font-awesome.min.css" />
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/Images/Icons/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/Images/Icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/Images/Icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/Images/Icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/Images/Icons/apple-touch-icon-57-precomposed.png">
</head>
<body>
    <div class="spinner"></div>
    <!--Header-->
    <header class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a id="logo" class="pull-left" href="/"></a>
                <div class="nav-collapse collapse pull-right">
                    <ul class="nav">
                        <li><a href="/">@Language.Home</a></li>
                        <li>@Html.ActionLink(Language.Search, "Countries", "Search")</li>
                        <li>@Html.ActionLink(Language.Routes, "PublicRoutes", "Route")</li>
                        <li>@Html.ActionLink(Language.About, "About", "Home")</li>
                        <li>@(user == null ? Html.ActionLink(Language.LogIn, "LogIn", "User") : Html.ActionLink(Language.Profile, "Index", "User"))</li>
                        @if (user != null && user.HasModeratorAccess)
                        {
                             <li>@Html.ActionLink(Language.Dashboard, "Index", "Dashboard")</li>
                        }
                        <li class="languages">
                            <img src="@Url.Content("~/Images/Main/English.gif")" id="en" alt="English" />
                            <img src="@Url.Content("~/Images/Main/Russian.jpg")" id="ru" alt="Русский" />
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </header>
    @RenderBody()
    <!--Footer-->
    <footer id="footer">
        <div class="container">
            <div class="row-fluid">
                <div class="span5 cp">
                    &copy; @DateTime.Now.Year <a target="_blank" href="/">iTourist</a>. @Language.AllRightsReserved.
                </div>
                <!--/Copyright-->
                <div class="span6">
                    <ul class="social pull-right">
                        <li><a href="#"><i class="icon-facebook"></i></a></li>
                        <li><a href="#"><i class="icon-twitter"></i></a></li>
                        <li><a href="#"><i class="icon-pinterest"></i></a></li>
                        <li><a href="#"><i class="icon-linkedin"></i></a></li>
                        <li><a href="#"><i class="icon-google-plus"></i></a></li>
                        <li><a href="#"><i class="icon-youtube"></i></a></li>
                        <li><a href="#"><i class="icon-tumblr"></i></a></li>
                        <li><a href="#"><i class="icon-dribbble"></i></a></li>
                        <li><a href="#"><i class="icon-rss"></i></a></li>
                        <li><a href="#"><i class="icon-github-alt"></i></a></li>
                        <li><a href="#"><i class="icon-instagram"></i></a></li>
                    </ul>
                </div>
                <div class="span1">
                    <a id="gototop" class="gototop pull-right" href="#"><i class="icon-angle-up"></i></a>
                </div>
                <!--/Goto Top-->
            </div>
        </div>
    </footer>
    <!--/Footer-->
    @Scripts.Render("~/bundles/Main/SharedScripts")
    <script>
        jQuery(window).load(function () {
            jQuery('.magnifier').touchTouch();
            $("#en").click(function () {
                setCookie("UserLang", "en", 365);
                location.reload();
            });
            $("#ru").click(function () {
                setCookie("UserLang", "ru", 365);
                location.reload();
            });

        });


        function setCookie(cName, value, exdays) {
            var exdate = new Date();
            exdate.setDate(exdate.getDate() + exdays);
            var cValue = value + ((exdays == null) ? "" : "; expires=" + exdate.toUTCString() + ";path=/");
            document.cookie = cName + "=" + cValue;
        }

    </script>
    @RenderSection("Scripts", false)
</body>
</html>
